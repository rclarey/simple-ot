{
  "name": "simple-ot",
  "version": "1.0.1",
  "description": "Operational transform using the GOTO control algorithm",
  "author": "Russell Clarey (https://russellclarey.com)",
  "keywords": [
    "operational transform",
    "OT"
  ],
  "main": "lib/mod.js",
  "types": "lib/mod.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "yarn run lint && yarn run test && yarn run build",
    "test": "jest --coverage"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.1.3",
    "jest": "^23.1.0",
    "prettier": "^1.16.4",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "collectCoverage": false,
    "coverageDirectory": "<rootDir>/coverage/",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "test/.*\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ]
  }
}
